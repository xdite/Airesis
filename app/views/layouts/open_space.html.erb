<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="<%= I18n.locale %>" lang="<%= I18n.locale %>">
<head>
  <title><%= (@page_title || t('open_space')) + ' - ' + Setting.app_short_name %></title>
  <%= render :partial => "layouts/head" %>
</head>
<body>
<div id="great_container">
  <% content_for :menu do %>
      <div id="menu-group" class="title-area hide-for-small">
        <div class="topimage hide-for-small">
          <%= image_tag 'logo120.png', :width => 60, :alt => Setting.app_long_name %>
        </div>
        <div class="topmenu">
          <span class="tit left"><%= t('open_space') %></span>

          <div class="submenu mycont hide-for-small">
            <%= link_to t('pages.open_space.layout.proposals_button'), proposals_path, class: ((['proposals', 'proposal_histories'].include? params[:controller]) ? 'sel' : '') %>
            <span> ⋅ </span>
            <%= link_to t('pages.open_space.layout.calendar_button'), events_path, class: (params[:controller] == 'events' ? 'sel' : '') %>

            <div class="borx  show-for-large-up <%= current_user ? '' : 'expandb' %>"></div>
            <div class="tria" style="left: 389px;"></div>
          </div>
        </div>
      </div>
  <% end %>

  <%= render :partial => "layouts/header" %>
  <div id="main" style="right:0px;">
    <!-- ##### Main Copy ##### -->
    <div id="main-copy">
      <div id="menu-left" class="show-for-medium-up">
        <div class="menu2">
          <div class="mybox show-for-small">
            <%= yield :menu %>
          </div>
          <%= yield :left_panel %>
        </div>
      </div>
      <div id="centerpanelextended">
        <div class="centerfloat <%= raw @extend ? 'extended' : '' %>">
          <%= render :partial => 'layouts/tutorials' %>
          <div id="flash_messages">
            <%= render :partial => 'layouts/flash', :locals => {:flash => flash} %>
          </div>
          <%= yield :layout %>
        </div>

        <%= render :partial => "layouts/menu_right" %>
        <div class="clearboth"></div>
      </div>
      <%= render :partial => "layouts/new_footer" %>
    </div>
  </div>
</div>

</body>
</html>
